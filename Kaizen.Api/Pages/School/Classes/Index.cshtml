@page
@model Kaizen.Api.Pages.School.Classes.IndexModel

<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Registered Classes</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary"> <i class="fas fa-plus"></i> &nbsp; Create New</a>
        </div>
    </div>
    <br> <br />
    <table id="Dt_Load" class="table table-hover table-striped table-bordered" style="width: 100%;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Capacity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model.Classes)
            {
                <tr class="table-light">
                <td>@items.Name</td>
                <td>@items.Description</td>
                <td>@items.Capacity</td>
                <td><a asp-page="/School/Classes/Class/@items.Id">Edit Class</a></td>
                <td><a asp-page="/Admin/School/Class">View Class</a></td>
                </tr>
            }
        </tbody>
    </table>

 <div class="col-6 text-right">
            <a asp-page="School/Home/Index" class="btn btn-primary"> &nbsp; Back to School</a>
        </div>
</div>


@section Scripts{
     <script src="~/js/classes.js"></script>
}
