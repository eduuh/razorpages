@page
@model Kaizen.Api.Pages.School.Classes.UpsertModel

<form method="post">

    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Class.Id != null)
            {
                <input type="hidden" asp-for="Class.Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88;">
                <h2 class="text-primary">@(Model.Class.Id !=null ? "Update ": "Create ")Class</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Class.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Class.Name" />
                        <span class="text-danger" asp-validation-for="Class.Name"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Class.Description"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Class.Description" />
                        <span class="text-danger" asp-validation-for="Class.Description"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Class.Capacity"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Class.Capacity" />
                        <span class="text-danger" asp-validation-for="Class.Capacity"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                @if (Model.Class.Id != null)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</form>