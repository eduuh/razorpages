@page
@model UploadandDowloadService.Pages.Admin.Content.CultureModel

<form method="post">

    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Contentobj.Id != null)
            {
                <input type="hidden" asp-for="Contentobj .Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88;">
                <h2 class="text-primary">@(Model.Contentobj.Id !=null ? "Update ": "Create ")Culture Awareness Content
                </h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Contentobj.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Contentobj.Name" />
                        <span class="text-danger" asp-validation-for="Contentobj .Name"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Contentobj.Description"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Contentobj.Description" />
                        <span class="text-danger" asp-validation-for="Contentobj.Description"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Contentobj .Type"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Contentobj.Type" />
                        <span class="text-danger" asp-validation-for="Contentobj.Type"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Contentobj.Region"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Contentobj.Region" />
                        <span class="text-danger" asp-validation-for="Contentobj.Region"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Contentobj.ContentType"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Contentobj.ContentType"
                            placeholder="example: pdf, png, jpeg" />
                        <span class="text-danger" asp-validation-for="Contentobj.ContentType"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Contentobj.BlobUrl"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Contentobj.BlobUrl" />
                        <span class="text-danger" asp-validation-for="Contentobj.BlobUrl"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                @if (Model.Contentobj.Id != null)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="col-4 pt-3">
                <i>Input and Image here</i>
            </div>
        </div>



    </div>
    </div>

</form>