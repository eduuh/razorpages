@model UploadandDowloadService.Pages.Admin.Content.TrainingModel
<form method="post">

    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.TrainingObj.Id != null)
            {
                <input type="hidden" asp-for="TrainingObj  .Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88;">
                <h2 class="text-primary">@(Model.TrainingObj .Id !=null ? "Update ": "Create ")Add Teacher Training
                </h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="TrainingObj .Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="TrainingObj .Name" />
                        <span class="text-danger" asp-validation-for="TrainingObj  .Name"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="TrainingObj .Description"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="TrainingObj .Description" />
                        <span class="text-danger" asp-validation-for="TrainingObj .Description"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="TrainingObj  .Type"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="TrainingObj .Type" />
                        <span class="text-danger" asp-validation-for="TrainingObj .Type"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="TrainingObj .Region"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="TrainingObj .Region" />
                        <span class="text-danger" asp-validation-for="TrainingObj .Region"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="TrainingObj .ContentType"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="TrainingObj .ContentType"
                            placeholder="example: pdf, png, jpeg" />
                        <span class="text-danger" asp-validation-for="TrainingObj .ContentType"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="TrainingObj .BlobUrl"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="TrainingObj .BlobUrl" />
                        <span class="text-danger" asp-validation-for="TrainingObj .BlobUrl"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                @if (Model.TrainingObj.Id != null)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="col-4 pt-3">
                <i>Input and Image here</i>
            </div>
        </div>



    </div>
    </div>

</form>>
