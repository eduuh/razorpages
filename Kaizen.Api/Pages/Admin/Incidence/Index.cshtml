@page
@model UploadandDowloadService.Pages.Admin.Incidence.IndexModel

<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Reported Incidences</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary"> <i class="fas fa-plus"></i> &nbsp; Create New</a>
        </div>
    </div>
    <br> <br />

    <table id="Dt_Load" class="table table-hover table-striped table-bordered" style="width: 100%;">
        <thead>
            <tr>
                <th>Incidences</th>
                <th>Region</th>
                <th>Description</th>
                <th>Town</th>
                <th>OccurenceTimes</th>
                <th>GenderAffected</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model.IncidenceReport)
            {
                <tr class="table-light">
                    <td>@items.Incident</td>
                    <td>@items.Region</td>
                    <td>@items.Description</td>
                    <td>@items.Town</td>
                    <td>@items.OccurrenceTimes</td>
                    <td>@items.GenderAffected</td>
                    <tb><a asp-page="/Admin/School/Class"></a></tb>
                </tr>
            }
        </tbody>
    </table>
</div>
