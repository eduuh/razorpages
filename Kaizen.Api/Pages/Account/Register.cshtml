@page
@model RegisterModel
@using Kaizen.Models.Enums
@using Taste.Utilities
@{
    ViewData["Title"] = "Register";
}


<form method="post" autocomplete="off" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="py-4 my-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-8 offset-2">
                <div class="card">

                    <div class="card-body px-lg-5 pt-5">
                        <h3 class="col-12 text-success text-center py-4">
                            <strong>Sign Up</strong>
                        </h3>
                        <hr />

                        <div class="form-row py-3">
                            <div class="col">
                                <div>
                                    <input type="text" asp-for="Input.FirstName" placeholder="First Name"
                                        class="form-control" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col">
                                <div>
                                    <input type="text" asp-for="Input.LastName" placeholder="Last Name"
                                        class="form-control" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="py-2">
                            <div>
                                <input type="email" asp-for="Input.Email" placeholder="Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="py-2">
                            <div>
                                <input type="text" asp-for="Input.PhoneNumber" autocomplete="off"
                                    placeholder="PhoneNumber" class="form-control" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="py-2">
                            <div>
                                <input type="password" asp-for="Input.Password" autocomplete="off"
                                    placeholder="Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="py-2">
                            <div>
                                <input type="password" asp-for="Input.ConfirmPassword" autocomplete="off"
                                    placeholder="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="py-2">
                            <input type="radio" name="rdUserRole" 
                                value="@Role.Manager.ToString()" />@Role.Manager.ToString()
                                                               
                            <input type="radio" name="rdUserRole"
                                value="@Role.Admin.ToString()" />@Role.Admin.ToString()                                
                        </div>

                        <div class="py-2">
                            <button type="submit" class="btn btn-success form-control">Register</button>
                        </div>
                    </div>
                    <hr />
                    <p>
                        By clicking <em>Register</em> You agree to our <a href="#" target="_blank">terms of Service</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>
